<div class="main-container">
	{{>flash}}
<div class="form-container">
	{{>validationSummary}}
<form method="POST" action="./login-employer">
	<div class="login-header">
    <span>Login in as an employer</span>
  </div>
			<input type="email" autofocus="autofocus" name="email" placeholder="Email" minlength="5" autocomplete="off" required />
			<div class="password-container">
				<input class="password" type="password" name="password" placeholder="Password" minlength="6" autocomplete="off" required/>
			<i class="far fa-eye" id="togglePassword"></i>
			</div>
<button>Login</button>
</form>
</div>
</div>